rolleiflex.baseFontSize             = app.baseFontSize
rolleiflex.autoBorderBox            = false
rolleiflex.use.em                   = false
rolleiflex.spaces.gutter            = 24px
rolleiflex.spaces.containerPadding  = 12px

rolleiflex.breakpoints = {
	"xs": {
		"minWidth": 0
		"container": 100%
	}

	"sm": {
		"minWidth": 768px
		"container": 740px
	}

	"md": {
		"minWidth": 992px
		"container": 960px
	}

	"lg": {
		"minWidth": 1201px
		"container": app.siteWidth
	}
}

_bps = rolleiflex.breakpoints
_generateRuptureBpsList()
	list = ()
	for scaleName, scaleOpts in _bps
		push(list, max(scaleOpts.minWidth - 1, 0))
	return list

rupture = merge(rupture, {
	"base-font-size":          app.baseFontSize
	"scale":                   _generateRuptureBpsList()
	"scale-names":             keys(_bps)
	"anti-overlap":            true
	"enable-em-breakpoints":   rolleiflex.use.em
	"mobile-cutoff":           _bps.sm.minWidth - 1
	"tablet-cutoff":           _bps.md.minWidth - 1
	"desktop-cutoff":          _bps.md.minWidth - 1
	"hd-cutoff":               _bps.lg.minWidth - 1
})
