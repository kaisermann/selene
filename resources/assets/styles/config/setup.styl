/*
 * App parameters
 * Used for reboot.styl, rolleiflex and rupture.
 */
app = {
	/** Website base font configuration */
	base: {
		fontSize: 16px
		fontFamily: fonts.main
		lineHeight: 1.5
	}

	/** Body configuratiuon */
	body: {
		color: #000
		backgroundColor: #fff
	}

	/** Link configuration */
	link: {
		color: blue
		decoration: underline
	}

	/** Headins configuration */
	headings: {
		marginBottom: .5rem
	}

	/** Paragraphs configuration */
	paragraphs: {
		marginBottom: 1rem
	}

	/** Table configuration */
	table: {
		cellPadding: .75rem
	}
}
