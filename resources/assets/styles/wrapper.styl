// The '@require' can be relative to the:
//	- 'node_modules' directory (use the '~' prefix for clarity)
//	- 'gulpfile.js'/root directory (use the '#' prefix for clarity)
//	- 'resources/views' directory (use the '@' prefix for clarity)

// External (relative to node_modules directory)
@require "~rolleiflex/src/wrapper.styl"
@require "~rupture/rupture/index.styl"

// Configuration files
@require "config/setup"
@require "config/external"
@require "config/mixins"
@require "config/*"

// General style files
@require "common/normalize"
@require "common/helpers"
@require "common/global"
@require "views/*"
@require "wordpress/wp-classes"

// Component files (relative to 'resources/views' directory)
@require '@components/**/*'

// Overrides
@require "common/overrides"
