{
  "config": {
    "paths": {
      "source": "resources/assets/",
      "dist": "dist/"
    },
    "browserSync": {
      "mode": "proxy",
      "whitelist": ["wp-admin/admin-ajax.php"],
      "blacklist": ["wp-admin/**"],
      "watch": [
        "{app,config}/**/*.php",
        "resources/{views,controllers,components}/**/*.php"
      ],
      "devUrl": "localhost:8888/selene"
    }
  },
  "resources": {
    "scripts": {
      "pattern": "*.js",
      "directory": "scripts",
      "assets": {
        "main.js": {
          "files": "index.js",
          "vendor": "resources/assets/scripts/vendor/*.js"
        }
      }
    },
    "styles": {
      "pattern": "*.{css,styl,scss,sass,less}",
      "directory": "styles",
      "assets": {
        "main.css": {
          "files": "index.styl",
          "vendor": "resources/assets/styles/vendor/*.css",
          "uncss": true
        },
        "editor.css": "wordpress/editor.styl",
        "admin.css": "wordpress/admin/wrapper.styl",
        "login.css": "wordpress/login/wrapper.styl"
      }
    },
    "fonts": {
      "pattern": "*.{eot,otf,svg,ttc,ttf,woff,woff2}",
      "directory": "fonts",
      "assets": {
        "./": "**/*"
      }
    },
    "images": {
      "pattern": "*.{jpg,png,gif,svg}",
      "directory": "images",
      "assets": {
        "./": "**/*"
      }
    }
  }
}
