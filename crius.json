{
  "config": {
    "paths": {
      "source": "assets/",
      "dist": "dist/"
    },
    "browserSync": {
      "mode": "server",
      "watch": ["**/*.{php,html}"],
      "devUrl": "localhost/web/root"
    }
  },
  "resources": {
    "scripts": {
      "pattern": "*.js",
      "directory": "scripts",
      "assets": {
        "main.js": {
          "files": "index.js",
          "autoload": "resources/assets/scripts/autoload/*.js"
        }
      }
    },
    "styles": {
      "pattern": "*.{css,styl,scss,sass,less}",
      "directory": "styles",
      "assets": {
        "main.css": {
          "files": "index.styl",
          "autoload": "resources/assets/styles/autoload/*.css"
        }
      }
    },
    "fonts": {
      "pattern": "*.{eot,otf,svg,ttc,ttf,woff,woff2}",
      "directory": "fonts",
      "assets": {
        "./": "**/*"
      }
    },
    "images": {
      "pattern": "*.{jpg,png,gif,svg}",
      "directory": "images",
      "assets": {
        "./": "**/*"
      }
    }
  }
}
