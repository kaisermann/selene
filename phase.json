{
  "config": {
    "paths": {
      "source": "assets/",
      "dist": "dist/"
    },
    "supportedBrowsers": ["last 2 versions", "opera 12", "IE 10", "Safari >= 8"],
    "browserSync": {
      "whitelist": ["wp-admin/admin-ajax.php"],
      "blacklist": ["wp-admin/**"],
      "files": [
        "{src,templates}/**/*.{php,html}",
        "*.{php,html}"
      ]
    },
    "devUrl": "localhost:8888/chris"
  },
  "resources": {
    "scripts": {
      "pattern": "*.js",
      "directory": "scripts",
      "assets": {
        "main.js": {
          "files": "scripts/wrapper.js",
          "vendor": ["assets/scripts/vendor/*.js"],
          "npm": []
        },
        "customizer.js": {
          "files": "scripts/customizer.js"
        }
      }
    },
    "styles": {
      "pattern": "*.{css,styl,scss,sass,less}",
      "directory": "styles",
      "assets": {
        "main.css": {
          "files": "styles/wrapper.styl",
          "vendor": [
            "assets/styles/vendor/reset.css",
            "assets/styles/vendor/*.css"
          ],
          "npm": [],
          "uncss": true
        },
        "editor.css": {
          "files": "styles/wordpress/editor.styl"
        },
        "admin.css": {
          "files": "styles/wordpress/admin.styl"
        }
      }
    },
    "fonts": {
      "pattern": "*.{eot,otf,svg,ttc,ttf,woff,woff2}",
      "directory": "fonts",
      "dynamicTask": true,
      "assets": {
        "/": {
          "files": "fonts/**/*"
        }
      }
    },
    "images": {
      "pattern": "*.{jpg,png,gif,svg}",
      "directory": "images",
      "dynamicTask": true,
      "assets": {
        "/": {
          "files": "images/**/*"
        }
      }
    }
  }
}
